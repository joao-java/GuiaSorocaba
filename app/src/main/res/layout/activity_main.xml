<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="726dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textmenu"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zoologico"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:src="@drawable/panda"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bnt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bntsaibamais" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iguatemi Esplanada"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:src="@drawable/iguatemiesplanada"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bnt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bntsaibamais" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parque Natural Municipal Chico Mendes"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:src="@drawable/chicomendes"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/bnt3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bntsaibamais" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>